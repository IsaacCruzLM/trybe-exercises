use("erp");

db.vendas.find();

db.clientes.aggregate([
  {
    $addFields: {
      idade: {
        $floor: {
          $divide: [
            { $subtract: ["$$NOW", "$dataNascimento"] },
            86400000 * 30 * 12
          ]
        }
      },
    }    
  },
  {
    $lookup: {
      from: 'vendas',
      localField: 'clienteId',
      foreignField: 'clienteId',
      as: 'Todas_Compras'
    }
  }
]);